<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.activity.OrderActivity">

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/black"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <include
        android:id="@+id/layout_tittle_bar"
        layout="@layout/item_tittle_bar"/>

    <TextView
        android:id="@+id/spinner_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_spinner_2"
        android:drawablePadding="5dp"
        android:entries="@array/status_order"
        android:paddingEnd="7dp"
        android:text="202X년 XX월 XX일자"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_tittle_bar" />

    <Spinner
        android:id="@+id/spinner_latest_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:paddingEnd="7dp"
        style="@style/Widget.AppCompat.Spinner"
        android:background="@drawable/bg_spinner"
        android:entries="@array/latest_order"
        app:layout_constraintTop_toTopOf="@id/spinner_status"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_complete_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="10dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/spinner_latest_order"
        app:layout_constraintStart_toStartOf="@id/spinner_status"
        app:layout_constraintTop_toBottomOf="@id/spinner_status">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시작날짜"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <Spinner
                android:id="@+id/spinner_startdate_year"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_spinner_two"
                android:entries="@array/year"
                android:layout_marginTop="10dp"
                android:paddingEnd="15dp"
                android:layout_marginStart="14dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_start_date"/>

            <Spinner
                android:id="@+id/spinner_startdate_month"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_spinner_two"
                android:entries="@array/month"
                android:layout_marginTop="10dp"
                android:paddingEnd="15dp"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toStartOf="@id/spinner_startdate_date"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/spinner_startdate_year"/>
            <Spinner
                android:id="@+id/spinner_startdate_date"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_spinner_two"
                android:layout_marginTop="10dp"
                android:paddingEnd="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/spinner_startdate_month"/>

            <TextView
                android:id="@+id/tv_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마감날짜"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/spinner_startdate_year"
                app:layout_constraintStart_toStartOf="parent"/>

            <Spinner
                android:id="@+id/spinner_endate_year"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_spinner_two"
                android:entries="@array/year"
                android:layout_marginTop="10dp"
                android:paddingEnd="15dp"
                android:layout_marginStart="14dp"
                app:layout_constraintTop_toBottomOf="@id/spinner_startdate_year"
                app:layout_constraintStart_toEndOf="@id/tv_start_date"/>

            <Spinner
                android:id="@+id/spinner_endate_month"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_spinner_two"
                android:entries="@array/month"
                android:paddingEnd="15dp"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toStartOf="@id/spinner_endate_date"
                app:layout_constraintTop_toTopOf="@id/spinner_endate_year"
                app:layout_constraintStart_toEndOf="@id/spinner_endate_year"/>

            <Spinner
                android:id="@+id/spinner_endate_date"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_spinner_two"
                android:paddingEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/spinner_endate_month"
                app:layout_constraintTop_toTopOf="@id/spinner_endate_year" />

            <LinearLayout
                android:id="@+id/linear_order_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toBottomOf="@id/spinner_endate_year">

                <TextView
                    android:id="@+id/tv_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:text="주문유형"/>

                <TextView
                    android:id="@+id/type_order_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:text="현장"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/bg_button_login"
                    android:backgroundTint="#E4E4E4"/>

                <TextView
                    android:id="@+id/type_order_pickup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button_login"
                    android:backgroundTint="#E4E4E4"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="포장"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/type_order_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:text="배달"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:background="@drawable/bg_button_login"
                    android:backgroundTint="#E4E4E4"/>
                <TextView
                    android:id="@+id/type_order_dinein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:text="홀"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:background="@drawable/bg_button_login"
                    android:backgroundTint="#E4E4E4"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_payment_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toBottomOf="@id/linear_order_type">

                <TextView
                    android:id="@+id/tv_payment_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:text="결제방식"/>

                <TextView
                    android:id="@+id/type_order_from_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:text="일반"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/bg_button_login"
                    android:backgroundTint="#E4E4E4"/>

                <TextView
                    android:id="@+id/type_order_from_subscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button_login"
                    android:backgroundTint="#E4E4E4"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="구독권"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/type_order_from_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:text="기프티콘"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/bg_button_login"
                    android:backgroundTint="#E4E4E4"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_payment_method_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toBottomOf="@id/linear_payment_method"
                app:layout_constraintStart_toStartOf="parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="주문유형"/>

                <TextView
                    android:id="@+id/type_order_from_voucher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:text="상품권"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/bg_button_login"
                    android:backgroundTint="#E4E4E4"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_weight="1"
                    android:text="주문유형"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_weight="1"
                    android:text="주문유형"/>



            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_order_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toBottomOf="@id/linear_payment_method_2"
                app:layout_constraintStart_toStartOf="parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:text="주문자명"/>

                <EditText
                    android:id="@+id/edt_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/black"
                    android:hint="주문자 명을 입력해주세요"
                    android:textColorHint="#A8A8A8"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="12sp"
                    android:paddingStart="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/bg_editext"
                    android:backgroundTint="#F5F5F5"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_invoice_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toBottomOf="@id/linear_order_name"
                app:layout_constraintStart_toStartOf="parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:text="주문번호"/>

                <EditText
                    android:id="@+id/edt_invoice_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/black"
                    android:hint="주문번호를 입력해주세요"
                    android:textColorHint="#A8A8A8"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="12sp"
                    android:paddingStart="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/bg_editext"
                    android:backgroundTint="#F5F5F5"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_button_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:layout_marginEnd="15dp"
                android:weightSum="3"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear_invoice_id"
                app:layout_constraintStart_toStartOf="@id/spinner_startdate_year"
                >

                <TextView
                    android:id="@+id/btn_reset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="12sp"
                    android:paddingTop="3dp"
                    android:gravity="center"
                    android:text="초기화"
                    android:paddingBottom="3dp"
                    android:background="@drawable/bg_button_login"/>
                <TextView
                    android:id="@+id/btn_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:textColorHint="#A8A8A8"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="12sp"
                    android:text="검색"
                    android:gravity="center"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/bg_button_login"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:textColorHint="#A8A8A8"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="12sp"
                    android:paddingStart="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/bg_button_login"
                    android:backgroundTint="@color/white"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    
    <TextView
        android:id="@+id/tv_current_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="202X년 XX월 XX일자"
        android:textColor="#A8A8A8"
        android:fontFamily="@font/inter_regular"
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_complete_order"/>
    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#A8A8A8"
        app:layout_constraintBottom_toBottomOf="@id/tv_current_date"
        app:layout_constraintStart_toEndOf="@id/tv_current_date"
        app:layout_constraintEnd_toEndOf="@id/spinner_latest_order"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/pull_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>