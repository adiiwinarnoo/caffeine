<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/conts_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90050101"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/img_popup"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_button_login"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintTop_toTopOf="@id/img_popup"
        app:layout_constraintEnd_toEndOf="@id/img_popup"/>

    <TextView
        android:id="@+id/tvTittlePopup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="개점 시 판매 수량을 입력해주십시오."
        android:layout_marginStart="28dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="11dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/img_popup"
        app:layout_constraintStart_toStartOf="@id/img_popup"
        app:layout_constraintTop_toBottomOf="@id/img_close"/>
    <TextView
        android:id="@+id/tv_warning_text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="텍스트/버튼으로 조절가능합니다."
        android:textColor="@color/red"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/inter_regular"
        android:textSize="9sp"
        app:layout_constraintTop_toBottomOf="@id/tvTittlePopup"
        app:layout_constraintStart_toStartOf="@id/img_popup"
        app:layout_constraintEnd_toEndOf="@id/img_popup"/>

    <EditText
        android:id="@+id/edt_modify_dessert_value"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:textSize="12sp"
        android:layout_marginTop="11dp"
        android:textColorHint="@color/black"
        android:gravity="right"
        android:paddingRight="10dp"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/bg_input"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_warning_text_button"
        app:layout_constraintStart_toStartOf="@id/tv_confirm"
        app:layout_constraintEnd_toEndOf="@id/tv_confirm"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/add_stocks"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:background="@drawable/circle_add_stocks"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/edt_modify_dessert_value"
        app:layout_constraintTop_toTopOf="@id/edt_modify_dessert_value"
        app:layout_constraintBottom_toBottomOf="@id/edt_modify_dessert_value"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mines_stocks"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:background="@drawable/circle_mines_stock"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@id/edt_modify_dessert_value"
        app:layout_constraintTop_toTopOf="@id/edt_modify_dessert_value"
        app:layout_constraintBottom_toBottomOf="@id/edt_modify_dessert_value"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="#ADADAD"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/mines_stocks"
        app:layout_constraintBottom_toBottomOf="@id/mines_stocks"
        app:layout_constraintStart_toStartOf="@id/mines_stocks"
        app:layout_constraintEnd_toEndOf="@id/mines_stocks"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        app:layout_constraintTop_toTopOf="@id/add_stocks"
        app:layout_constraintBottom_toBottomOf="@id/add_stocks"
        app:layout_constraintStart_toStartOf="@id/add_stocks"
        app:layout_constraintEnd_toEndOf="@id/add_stocks"/>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginBottom="15dp"
        android:text="확인"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="@font/inter_regular"
        android:background="@drawable/bg_button_login"
        app:layout_constraintStart_toStartOf="@id/img_popup"
        app:layout_constraintEnd_toEndOf="@id/img_popup"
        app:layout_constraintBottom_toBottomOf="@id/img_popup"/>

</androidx.constraintlayout.widget.ConstraintLayout>
