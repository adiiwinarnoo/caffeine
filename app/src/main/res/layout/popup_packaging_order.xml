<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/conts_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90050101"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/img_popup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_button_login"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintTop_toTopOf="@id/img_popup"
        app:layout_constraintEnd_toEndOf="@id/img_popup"/>
    <TextView
        android:id="@+id/tv_popup_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="포장 주문내역"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/img_popup"
        app:layout_constraintTop_toTopOf="@id/img_popup"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@id/img_close"/>

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:background="@color/editext"
        app:layout_constraintStart_toStartOf="@id/img_popup"
        app:layout_constraintEnd_toEndOf="@id/img_popup"
        app:layout_constraintTop_toBottomOf="@id/tv_popup_tittle"/>

    <TextView
        android:id="@+id/tv_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="매장명"
        android:textColor="@color/black"
        android:textSize="9sp"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/img_popup" />
    <TextView
        android:id="@+id/tv_store_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:text="매장주소"
        android:textColor="@color/black"
        android:textSize="9sp"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintTop_toBottomOf="@id/tv_store_name"
        app:layout_constraintStart_toStartOf="@id/img_popup" />
    <TextView
        android:id="@+id/tv_store_owner_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:text="점주 : 000"
        android:textColor="@color/black"
        android:textSize="9sp"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintTop_toBottomOf="@id/tv_store_address"
        app:layout_constraintStart_toStartOf="@id/img_popup" />
    <TextView
        android:id="@+id/tv_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="주문번호"
        android:textColor="@color/black"
        android:textSize="9sp"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintTop_toTopOf="@id/tv_store_address"
        app:layout_constraintEnd_toEndOf="@id/img_popup"/>
    <TextView
        android:id="@+id/tv_order_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="주문일시"
        android:textColor="@color/black"
        android:textSize="9sp"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintTop_toTopOf="@id/tv_store_owner_point"
        app:layout_constraintEnd_toEndOf="@id/img_popup"/>

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:background="@color/editext"
        app:layout_constraintStart_toStartOf="@id/img_popup"
        app:layout_constraintEnd_toEndOf="@id/img_popup"
        app:layout_constraintTop_toBottomOf="@id/tv_order_date_time"/>

    <TextView
        android:id="@+id/tv_customer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="고객명"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/inter_regular"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/view2"
        app:layout_constraintStart_toStartOf="@id/img_popup"
        app:layout_constraintEnd_toEndOf="@id/img_popup"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="0dp"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_customer_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="합계"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/recyclerview"
        app:layout_constraintStart_toStartOf="@id/img_popup"
        />

    <TextView
        android:id="@+id/tv_sum_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가격"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/recyclerview"
        app:layout_constraintEnd_toEndOf="@id/img_popup"/>

    <TextView
        android:id="@+id/tv_delivery_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결제방식_1(ex: 상품권)"
        android:textSize="9dp"
        android:visibility="gone"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_sum"
        app:layout_constraintStart_toStartOf="@id/img_popup"
        />
    <TextView
        android:id="@+id/value_delivery_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가격"
        android:visibility="gone"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"
        android:textSize="9sp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/tv_delivery_cost"
        app:layout_constraintEnd_toEndOf="@id/img_popup"/>
    <TextView
        android:id="@+id/tv_general_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결제방식_2(ex:일반결제 등)"
        android:textSize="9dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_delivery_cost"
        app:layout_constraintStart_toStartOf="@id/img_popup"
        />
    <TextView
        android:id="@+id/value_general_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가격"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"
        android:textSize="9sp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/tv_general_payment"
        app:layout_constraintEnd_toEndOf="@id/img_popup"/>

    <View
        android:id="@+id/view8"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/editext"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/img_popup"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/img_popup"
        app:layout_constraintTop_toBottomOf="@id/value_general_payment" />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintTop_toBottomOf="@id/tv_general_payment"
        android:text="기사님 부르기"
        android:textSize="14sp"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="@font/inter_regular"
        android:background="@drawable/bg_button_login"
        app:layout_constraintStart_toStartOf="@id/img_popup"
        app:layout_constraintEnd_toEndOf="@id/img_popup"
        app:layout_constraintBottom_toBottomOf="@id/img_popup"/>


</androidx.constraintlayout.widget.ConstraintLayout>
